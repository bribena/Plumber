{
    "tasks": [
        {
            "type": "shell",
            "label": "Build és futtatás",
            "command": "${workspaceFolder}/../run.sh",
            "args": [
                "${workspaceFolder}/main",
                "-f",
                "${workspaceFolder}/lib/src/'*'/'*'.c",
                "-F",
                "lib/include",
                "-S",
                "-lS"
            ],
            "problemMatcher": [
                "$armcc5"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "lib/src/*/*.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-Werror",
                "-Wall",
                "-Wpedantic",
                "-Wextra",
                "`sdl2-config --cflags --libs`",
                "-lSDL2_gfx",
                "-lSDL2_image"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
